<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="life.sabujak.pickle.ui.insta.InstaTopViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:onClick="@{()-> viewModel.isEnabled()? viewModel.onClick(): null}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:text="@{String.valueOf(viewModel.count)}"
            android:textColor="@{viewModel.textColor}"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="@{viewModel.isCountVisible? View.VISIBLE : View.GONE}"
            tools:text="100"
            tools:visibility="visible"
            app:layout_constraintRight_toLeftOf="@+id/title_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="9.5dp"
            android:gravity="center"
            android:text="@{viewModel.title}"
            android:textColor="@{viewModel.textColor}"
            android:textSize="16sp"
            tools:text="@string/select"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>