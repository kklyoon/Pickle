<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="life.sabujak.pickle.ui.dialog.TopBarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{viewModel.backgroundColor}"
        android:orientation="horizontal"
        android:onClick="@{v->viewModel.onDoneClick()}"
        android:padding="8dp"
        tools:background="@color/WT">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{viewModel.title}"
            android:textColor="@{viewModel.titleColor}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.count}"
            android:textColor="@{viewModel.countColor}"
            app:layout_constraintBottom_toBottomOf="@id/done"
            app:layout_constraintEnd_toStartOf="@id/done"
            app:layout_constraintTop_toTopOf="@id/done"
            tools:text="9999" />

        <ImageView
            android:id="@+id/done"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@{viewModel.doneIcon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@{viewModel.doneIconTintColor}"
            tools:src="@drawable/ic_check_white_24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>